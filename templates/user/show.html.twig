{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.firstname }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="flex">
        <div class="w-1/3 mr-10">
            <img class="w-full" src="{{ asset(user.avatar) }}" alt="{{ user.firstname }}">
        </div>
        <div class="w-2/3">
            {% for post in user.posts %}
                {{ include('_post.html.twig') }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
