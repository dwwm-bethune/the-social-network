{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.firstname }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="flex flex-wrap lg:flex-nowrap">
        <div class="lg:w-1/3 lg:mr-10">
            <img class="w-full rounded-md" src="{{ asset(user.avatar) }}" alt="{{ user.firstname }}">
        </div>
        <div class="lg:w-2/3">
            {% for post in user.posts %}
                {{ include('_post.html.twig') }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
