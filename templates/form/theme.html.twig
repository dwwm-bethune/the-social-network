{% use 'tailwind_2_layout.html.twig' %}

{%- block widget_attributes -%}
    {%- set widget_class = widget_class|default('mt-1 w-full rounded-lg border-gray-200') -%}
    {{- parent() -}}
{%- endblock widget_attributes -%}

{%- block form_label -%}
    {% set label_class = label_class|default('block text-gray-800 text-sm font-semibold') %}
    {{- parent() -}}
{%- endblock form_label -%}

{%- block form_errors -%}
    {% set error_item_class = error_item_class|default('text-red-700 text-sm') %}
    {{- parent() -}}
{%- endblock form_errors -%}

{% block date_widget -%}
    {%- set attr = attr|merge({ class: attr.class|default('flex w-full items-center space-x-4') }) -%}
    {{- parent() -}}
{%- endblock date_widget %}

{% block file_widget -%}
    {%- set attr = attr|merge({ class: attr.class|default('mt-1 focus:outline-none w-full file:cursor-pointer file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100') }) -%}
    {{- block('form_widget') -}}
{%- endblock file_widget %}
