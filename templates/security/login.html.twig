{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    {% if error %}
        <div class="w-1/2 mx-auto bg-red-600 text-red-100 px-3 py-4 rounded mb-6">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="w-1/2 mx-auto">
        <div class="mb-3">
            <label for="username" class="hidden">Email:</label>
            <input class="w-full border-gray-200" type="text" id="username" name="_username" placeholder="Email" value="{{ last_username }}" />
        </div>

        <div class="mb-3">
            <label for="password" class="hidden">Mot de passe:</label>
            <input class="w-full border-gray-200" type="password" id="password" placeholder="Mot de passe" name="_password" />
        </div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account" /> #}

        <button class="block w-full bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 duration-300">Connexion</button>
    </form>
{% endblock %}
